@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <meta name="author" content="SemiColonWeb" />

    <!-- Stylesheets
    ============================================= -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,900&display=swap" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/Content/ThemeContent/css/bootstrap.css" type="text/css" />
    <link href="~/Content/ThemeContent/Style/style.css" rel="stylesheet" />

    <link rel="stylesheet" href="/Content/ThemeContent/css/dark.css" type="text/css" />
    <link rel="stylesheet" href="/Content/ThemeContent/css/font-icons.css" type="text/css" />
    <link rel="stylesheet" href="/Content/ThemeContent/css/animate.css" type="text/css" />
    <link rel="stylesheet" href="/Content/ThemeContent/css/magnific-popup.css" type="text/css" />

    <!-- Bootstrap Switch CSS -->
    <link rel="stylesheet" href="/Content/ThemeContent/css/components/bs-switches.css" type="text/css" />

    <link rel="stylesheet" href="/Content/ThemeContent/css/custom.css" type="text/css" />
    <meta name='viewport' content='initial-scale=1, viewport-fit=cover'>

    <!-- Seo Demo Specific Stylesheet -->
    <link rel="stylesheet" href="/Content/ThemeContent/demos/seo/css/fonts.css" type="text/css" />
    <link rel="stylesheet" href="/Content/ThemeContent/demos/seo/seo.css" type="text/css" />



    <!-- / -->
    <!-- Document Title
    ============================================= -->
    <title>Login</title>




    <!-- / -->
    @*@Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")*@
</head>

<body class="stretched">

    <!-- Document Wrapper
    ============================================= -->
    <div id="wrapper" class="clearfix">

        <!-- Content
        ============================================= -->
        <section id="content">
            <div class="content-wrap py-0">

                <div class="section p-0 m-0 h-100 position-absolute" style="background: url('/Content/ThemeContent/images/admin_loginpage.jpg') center center no-repeat;
        background-size: cover;
    "></div>

                <div class="section bg-transparent min-vh-100 p-0 m-0">
                    <div class="vertical-middle">
                        <div class="container-fluid py-5 mx-auto">
                            <div class="center">
                                <a href="index.html"><img src="~/Content/ThemeContent/images/examSys.png" class="login-page-logo" alt="Canvas Logo"></a>
                            </div>

                            <div class="card mx-auto rounded-0 border-0" style="max-width: 400px; background-color: rgba(255,255,255,0.93);">
                                <div class="card-body" style="padding: 40px;">



                                    <form method="post" class="mb-0" asp-area="admin" asp-controller="AdminAccount" asp-action="Login" id="login-form" enctype="multipart/form-data">

                                        @Html.AntiForgeryToken()

                                        <h3>Login</h3>
                                        <!--error message section starts here-->
                                        <div class="row">
                                            <div class="special-div-less-margin">
                                                @if (TempData["SuccessMsg"] != null)
                                                {
                                                    if (!String.IsNullOrEmpty(TempData["SuccessMsg"].ToString()))
                                                    {

                                                        <div class="style-msg successmsg">
                                                            <div class="sb-msg"><i class="icon-thumbs-up"></i>@TempData["SuccessMsg"]</div>
                                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                                        </div>
                                                    }

                                                }
                                                @if (TempData["ErrorMsg"] != null)
                                                {

                                                    if (!String.IsNullOrEmpty(TempData["ErrorMsg"].ToString()))
                                                    {
                                                        <div class="style-msg errormsg">
                                                            <div class="sb-msg"><i class="icon-remove"></i>@TempData["ErrorMsg"]</div>
                                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                                                        </div>
                                                    }
                                                }

                                            </div>
                                        </div>

                                        <!--error message section ends here-->
                                        <div class="row">
                                            <div class="col-12 form-group">
                                                <label for="login-form-username">Email:</label>
                                                <input type="text" id="email" name="email" value="" class="form-control not-dark" required />
                                            </div>

                                           @*  <div class="col-12 form-group">
                                                <label for="login-form-password">User Type:</label>

                                                <select id="UserType" name="UserType" class="form-control not-dark" required>
                                                    <option value="Student">Student</option>
                                                    <option value="Teacher">Teacher</option>
                                                    <option value="Admin" selected>Admin</option>


                                                </select>
                                            </div> *@



                                            <div class="col-12 form-group">
                                                <label for="login-form-password">Password:</label>
                                                <input type="password" id="password" name="password" value="" class="form-control not-dark" required />
                                            </div>

                                            <div class="col-12 form-group">
                                                <button type="submit" class="button button-3d button-black m-0" id="login-form-submit" name="login-form-submit" value="login">Login</button>
                                                @*<a href="#" class="float-right">Forgot Password?</a>*@
                                                @*<a href="#" class="float-right" data-toggle="modal" data-target="#dummyLoginDataModal">Dummy Login Credential</a>*@
                                            </div>
                                        </div>
                                       </form>

                                </div>
                            </div>

                            <div class="text-center dark mt-3"><small>Copyrights &copy; All Rights Reserved by OnlineQuizConnn</small></div>
                        </div>
                    </div>
                </div>

            </div>
        </section><!-- #content end -->

    </div><!-- #wrapper end -->
    <!-- Go To Top
    ============================================= -->
    <div id="gotoTop" class="icon-angle-up"></div>




    <div class="modal fade" id="dummyLoginDataModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-body">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="myModalLabel">Login credential for checking system</h4>

                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>


                    <form id="dummyform" onsubmit="return false;">


                        <div class="modal-body">



                            <div class="card event-meta">
                                <div class="card-body">
                                    <ul class="portfolio-meta mb-0">
                                        <li><span class="resutl-detail"><i class="icon-email"></i>Email:</span> <a href="#!">admin@exam.com</a></li>
                                        <li><span class="resutl-detail"><i class="icon-user"></i>User Type:</span> <a href="#!">Admin </a></li>

                                        <li><span class="resutl-detail"><i class="icon-forbidden"></i>Password:</span> <a href="#!">123456</a></li>
                                    </ul>
                                </div>
                            </div>


                        </div>


                        <div class="modal-footer">

                            <button class="button btn-sm button-3d button-rounded gradient-earth" data-dismiss="modal"><i class="icon-lock"></i> Close</button>


                        </div>

                    </form>

                </div>
            </div>
        </div>
    </div>






    <!-- JavaScripts
    ============================================= -->
    <script src="/Content/ThemeContent/js/jquery.js"></script>
    <script src="/Content/ThemeContent/js/plugins.min.js"></script>

    <!-- Main Particles Js
    ============================================= -->
    <script src="/Content/ThemeContent/js/particles/particles.min.js"></script>
    <script src="/Content/ThemeContent/js/particles/particles-line.js"></script><!-- Particles Line -->
    <!-- Footer Scripts
    ============================================= -->
    <script src="/Content/ThemeContent/js/functions.js"></script>

</body>
</html>
